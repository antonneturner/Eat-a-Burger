<h1>Eat a Burger!</h1>

<h2>Burgers not eaten!</h2>

<ul>
    {{#each burger}}
    {{#unless devour}}
    {{> burgers/burger-block isdevoured=true}}
    {{/unless}}
    {{/each}}
</ul>

<h2>Eaten!</h2>

<ul>
    {{#each burger}}
    {{#if devour}}
    {{> burgers/burger-block isdevoured=false}}
    {{/if}}
    {{/each}}
</ul>

<h2>Add a burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="ca">Burger name:</label>
        <input type="text" id="ca" name="name">
    </div>

    <div class="form-group">
        <label for="sleepy">Sleepy?</label><br>
        <input type="radio" name="sleepy" value="1" checked> Sleepy!<br>
        <input type="radio" name="sleepy" value="0"> Awake
    </div>

    <button type="submit">Add burger</button>
</form>